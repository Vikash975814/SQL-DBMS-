CREATE TABLE SALES_ORDER(   
    ORDER_NO VARCHAR2(6) PRIMARY KEY CHECK (ORDER_NO LIKE 'O%'),   
    ORDER_DATE DATE NOT NULL,   
    CLIENT_NO  VARCHAR2 (6) REFERENCES CLIENT_MASTER(CLIENT_NO),   
    DELY_ADD VARCHAR2(25),   
    SALESMAN_NO VARCHAR2(6)  REFERENCES SALESMAN_MASTER(SALESMAN_NO),   
    DELY_TYPE CHAR (1) CHECK (DELY_TYPE IN ('P','F')),   
    BILLED_YN CHAR(1) CHECK  (BILLED_YN  IN ('Y','N')),     
    DELY_DATE DATE ,
    ORDER_STATUS VARCHAR2(10) CHECK (ORDER_STATUS IN ('IP','F','C')),
    CONSTRAINT DELY_DATE_GR CHECK(DELY_DATE>ORDER_DATE)
);
